<%= Rouge::Themes::Github.render(scope: '.highlight') %>
article pre.highlight {
  background-color: #fff;
}

body {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

// Override the github theme a touch for better visibility
pre, code {
  background: $code-bg;
}

// https://stackoverflow.com/questions/22429881/how-to-unstyle-anchor-when-using-bootstrap/33596636#33596636
.link-unstyled, .link-unstyled:link {
  color: $body-color;
  text-decoration: inherit;
}

article {
  h2, .h2, h3, .h3, h4, .h4, h5, .h5 {
    margin-top: 1.5rem;
  }

  // Make the code samples mildly prettier
  pre {
    /*@extend .pre-scrollable;*/

    border: $border-width solid $gray-200;
    border-radius: $border-radius;
    font-size: $code-font-size;
    padding: $table-cell-padding;
  }

  .embed-responsive {
    background: #fff;
    border: 5px #fff solid;
    max-width: 720px;
    margin: 0 auto;
  }

  .figure-img {
    max-width: 720px;
    width: 100%;
    margin: 0 auto;
  }

  .figure-caption {
    margin-top: 0.5rem;
  }
}
