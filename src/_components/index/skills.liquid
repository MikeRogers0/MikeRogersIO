<div class="my-24">
  <h2 class="h1 text-center">
    Skills
  </h2>

  <div class="mt-6 grid gap-12 lg:grid-cols-3">

    <div class="flex flex-wrap flex-col">
      <a class="flex-1 p-1 block flex items-center max-w-xs mx-auto" href="https://rubyonrails.org/" target="_blank" rel="noopener">
        <span class="sr-only">Ruby on Rails</span>
        {% svg /images/ruby-on-rails.svg width=198 height=70 %}
      </a>
      <div class="flex-1 text-center">
        <div class="font-bold mt-3">Ruby On Rails</div>
        <div class="text-sm text-gray-muted">Since 2013</div>
      </div>
    </div>

    <div class="flex flex-wrap flex-col">
      <a class="flex-1 p-1 block flex items-center max-w-xs mx-auto" href="https://www.youracclaim.com/badges/bcdaeaae-14e1-49b1-a835-e0f893e14c71/public_url" target="_blank" rel="noopener">
        <img src="/images/aws-cloud-practitioner.png" alt="AWS Certified Cloud Practitioner Badge" width="100" loading="lazy" />
      </a>
      <div class="flex-1 text-center">
        <div class="font-bold mt-3">AWS Certified Cloud Practitioner</div>
        <div class="text-sm text-gray-muted">Achieved 2020</div>
      </div>
    </div>

    <div class="flex flex-wrap flex-col">
      <a class="flex-1 p-1 block flex items-center max-w-xs mx-auto" href="https://www.heroku.com/" target="_blank" rel="noopener">
        <span class="sr-only">Heroku</span>
        {% svg /images/heroku-logo-stroke-purple.svg width=100 height=75 %}
      </a>
      <div class="flex-1 text-center">
        <div class="font-bold mt-3">Heroku</div>
        <div class="text-sm text-gray-muted">Since 2013</div>
      </div>
    </div>

  </div>
</div>
